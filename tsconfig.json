{
  "compilerOptions": {
    "target": "es2015",
    "module": "ES6",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": false,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
